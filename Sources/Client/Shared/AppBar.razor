<MudAppBar Elevation="1">
    <MudLink Typo="Typo.h1" Class="text-white" Href="/" Underline="Underline.None">Atelier Crémazie</MudLink>

    <MudSpacer />


    <MudLink Class="ml-7 lg-screen" Underline="Underline.None">
        <MudButton Style="text-transform:none" Class="text-white" OnClick="@(() => Scroll("vitrine"))">Vitrine</MudButton>
    </MudLink>
    <MudLink Class="text-white ml-7 lg-screen" Underline="Underline.None">
        <MudButton Style="text-transform:none" Class="text-white" OnClick="@(() => Scroll("pointvente"))">Points de vente</MudButton>
    </MudLink>
    <MudLink Class="text-white ml-7 lg-screen" Underline="Underline.None">
        <MudButton Style="text-transform:none" Class="text-white" OnClick="@(() => Scroll("contact"))">Contact</MudButton>
    </MudLink>

    <MudIconButton Class="sm-screen" Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.End" OnClick="@ToggleDrawer" />
</MudAppBar>

<MudDrawer @bind-Open="@open" Variant="DrawerVariant.Temporary" Anchor="Anchor.Bottom" Elevation="0" Style="background-color: #0F3F59;">
    <MudNavMenu>
        <MudNavLink Class="text-white" OnClick="@(() => Scroll("vitrine"))">Vitrine</MudNavLink>
        <MudNavLink Class="text-white" OnClick="@(() => Scroll("pointvente"))">Points de vente</MudNavLink>
        <MudNavLink Class="text-white" OnClick="@(() => Scroll("contact"))">Contact</MudNavLink>
    </MudNavMenu>
</MudDrawer>

@code {
    [Inject]
    protected IJSRuntime JSRuntime { get; set; } = null!;
    bool open = false;

    public void Scroll(string id)
    {
        JSRuntime.InvokeVoidAsync("scroll", id);
    }

    void ToggleDrawer()
    {
        open = !open;
    }
}