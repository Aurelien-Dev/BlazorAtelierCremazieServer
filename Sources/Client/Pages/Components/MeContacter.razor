<MudContainer MaxWidth=MaxWidth.ExtraExtraLarge Style="background-color:white">

    <MudStack>

        <MudText Typo=Typo.subtitle1 Class="d-flex align-center justify-center py-8" Style="font-weight:bold">
            CONTACTEZ MOI
        </MudText>

        <MudContainer MaxWidth=MaxWidth.Medium>

            <MudForm>

                <MudGrid Class="">
                    <MudItem xs=12 sm=12 lg=12>
                        <MudCard Elevation=0>
                            <MudCardContent>
                                <MudTextField Label="Nom / Prénom" @bind-Value="contact.Name" For="@(() => contact.Name)" />
                                <MudTextField Label="Email" Class="mt-3" @bind-Value="contact.Email" For="@(() => contact.Email)" />
                                <MudTextField Label="Numéro de téléphone" Class="mt-3" @bind-Value="contact.Telephone" For="@(() => contact.Telephone)" />
                                <MudTextField Label="Message" Class="mt-3" @bind-Value="contact.Message" For="@(() => contact.Message)" Lines=5 />
                            </MudCardContent>

                            <MudCardActions>
                                <MudButton ButtonType="ButtonType.Submit" Variant="Variant.Filled" Color="Color.Primary" Class="ml-auto">Envoyer</MudButton>
                            </MudCardActions>
                        </MudCard>
                    </MudItem>
                </MudGrid>
            </MudForm>

        </MudContainer>

    </MudStack>
</MudContainer>
