@using BlazorAtelierCremazieServer.ServicesExterne

<MudContainer id="pointvente" MaxWidth=MaxWidth.ExtraExtraLarge Style="background-color:white">

    <MudStack>

        <!-- emaux & terre Section-->
        <section class="page-section mb-0" id="collections">
            <div class="container">
                <!-- About Section Heading-->
                <h2 class="page-section-heading text-center text-uppercase text-bluenavy">POINT DE VENTE</h2>
                <!-- Icon Divider-->
                <div class="divider-custom">
                    <div class="divider-custom-line"></div>
                    <div class="divider-custom-icon"><img src="assets/star-light.png" /></div>
                    <div class="divider-custom-line"></div>
                </div>
            </div>
        </section>


        <MudContainer MaxWidth=MaxWidth.Large>
            <MudText Typo=Typo.subtitle1 Class="d-flex align-center justify-center text-bluenavy" Style="font-weight:bold">
                Sandrine Decamp Coiffure
            </MudText>
            <p class="profile-bio">
                Toutes mes poteries sont en vente chez <strong>Sandrine Decamps Coiffure à Sainte-Marie-sur-Ouche</strong>, hésitez pas à passer au salon si vous souhaitez faire des achats.
                Je peux également prendre des commandes, dans ce cas veuillez m'envoyer un message via le formulaire de
                <MudLink Underline=Underline.None Class="profile-bio" Style="color:white;" OnClick="@(() => Scroll("contact"))">contact</MudLink>.
            </p>
            <p class="profile-bio">
                Il est aussi possible de <strong>retirer</strong> une commande à <strong>Varanges (Bourgogne)</strong> ou à <strong>Lyon</strong> sur demande.
            </p>

            <MudStack Justify=Justify.Center Row=true>
                <MudImage Src="assets/img/Sandrine.webp" Alt="Étagère du point de vente" Elevation="25" Class="rounded-lg my-3 justify-center" Width=400 ObjectFit="ObjectFit.ScaleDown" />
            </MudStack>

            <MudStack Justify=Justify.Center Row=true>
                <!-- About Section Content-->
                <div class="text-center my-3" style="width:60rem; height:20rem">
                    @*<iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d2705.907202862869!2d4.808699315605939!3d47.29661301733338!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x47f2819a02fa15ed%3A0x32cd42e802f4b4bd!2sSANDRINE%20DECAMP%20COIFFURE!5e0!3m2!1sfr!2sfr!4v1622800136515!5m2!1sfr!2sfr"
                            title="Google maps du point de vente" style="border:0;" allowfullscreen="" loading="lazy"></iframe>*@
                </div>
            </MudStack>

        </MudContainer>

    </MudStack>
</MudContainer>

@code {
    [Inject]
    protected IJSRuntime JSRuntime { get; set; } = null!;

    public void Scroll(string id)
    {
        JSRuntime.InvokeVoidAsync("scroll", id);
    }
}